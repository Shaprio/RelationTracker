{# templates/mainPage.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
    Dashboard - Main Page
{% endblock %}

{% block content %}

    <!-- Góra: powitanie + przycisk tworzenia eventu + statystyki -->
    <div class="top-bar">
        <div>
            <div class="welcome-box">
                Hello, {{ app.user.name }}! It's good to see you again.
            </div>
            <div class="stats">
                <div class="stat-box">
                    <h2>{{ eventsCountThisMonth|default('0') }}</h2>
                    <p>Events this month</p>
                </div>
                <div class="stat-box">
                    <h2>{{ organizerCount|default('0') }}</h2>
                    <p>Organizer</p>
                </div>
                <div class="stat-box">
                    <h2>{{ guestCount|default('0') }}</h2>
                    <p>Guest</p>
                </div>
            </div>
        </div>

        <!-- Przycisk do tworzenia eventu (Placeholder) -->
        <button class="create-event-btn">Create Event</button>
    </div>

    <!-- Sekcja główna: lewa kolumna (kafelki) i prawa kolumna (calendar & today events) -->
    <div class="main-sections">
        <!-- Lewa kolumna -->
        <div class="left-column">
            <!-- Kafelek: Wydarzenia w tym tygodniu -->
            <div class="card">
                <h3>Events This Week</h3>
                <div class="item-list">
                    {% for e in eventsThisWeek %}
                        <div class="list-item">{{ e.title }} — {{ e.date|date('Y-m-d H:i') }}</div>
                    {% else %}
                        <p>No events found for this week.</p>
                    {% endfor %}

                    {% for r in recurringThisWeek %}
                        <div class="list-item">{{ r.title }} — {{ r.startDate|date('Y-m-d') }}</div>
                    {% else %}
                        {#
                        Uwaga: Drugi blok "else" w jednej pętli jest niedozwolony w
                        Twigu. Lepiej scalić w jedną listę, lub zrobić drugą pętlę
                        z innym wcięciem logicznym.
                        #}
                    {% endfor %}
                </div>
            </div>

            <!-- Kafelek: Birthday Events This Month -->
            <div class="card">
                <h3>Birthday Events This Month</h3>
                <div class="item-list">
                    {% for b in birthdayEvents %}
                        <div class="list-item">{{ b.title }} on {{ b.startDate|date('Y-m-d') }}</div>
                    {% else %}
                        <p>No birthdays this month.</p>
                    {% endfor %}
                </div>
            </div>

            <!-- Kafelek: Contacts to Reconnect -->
            <div class="card">
                <h3>Contacts to Reconnect</h3>
                <div class="item-list">
                    {% for c in staleContacts %}
                        <div class="list-item">{{ c.name }} - Last interaction over a month ago</div>
                    {% else %}
                        <p>All contacts are up to date.</p>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- Prawa kolumna -->
        <div class="right-column">
            <!-- Kalendarz (placeholder) -->
            <div class="calendar-box">
                <h3>April 11, 2024</h3>
                <!-- Tu można wstawić mini-kalendarz JS/HTML lub cokolwiek planujesz -->
                <p>(Placeholder for a calendar widget)</p>
            </div>

            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    <script>
    </script>
{% endblock %}
