{% extends 'base.html.twig' %}

{% block title %}
    Dashboard - Main Page
{% endblock %}

{% block stylesheets %}


{% endblock %}

{% block content %}
    <div class="top-bar">
        <div>
            <div class="welcome-box">
                Hello, {{ app.user.name }}! It's good to see you again.
            </div>
        </div>
    </div>

    <div class="main-sections">
        <div class="left-column">
            <div class="card">
                <h3>Upcoming Events (Next 7 Days)</h3>
                <div class="scrollbox">
                    <div class="item-list">
                        {% for e in upcomingEvents[:10] %}
                            <div class="list-item">
                                <strong>{{ e.title }}</strong> â€” {{ e.date|date('Y-m-d H:i') }}
                                {% if e.type == 'Recurring' %}
                                    <span class="badge bg-primary">Recurring</span>
                                {% else %}
                                    <span class="badge bg-success">Meeting</span>
                                {% endif %}
                            </div>
                        {% else %}
                            <p>No upcoming events.</p>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="card">
                <h3>Birthday Events This Month</h3>
                <div class="scrollbox">
                    <div class="item-list">
                        {% for b in birthdayEvents[:5] %}
                            <div class="list-item">{{ b.title }} on {{ b.startDate|date('Y-m-d') }}</div>
                        {% else %}
                            <p>No birthdays this month.</p>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="card">
                <h3>Contacts to Reconnect</h3>
                <div class="scrollbox">
                    <div class="item-list">
                        {% for c in staleContacts[:5] %}
                            <div class="list-item">{{ c.name }} - Last interaction over a month ago</div>
                        {% else %}
                            <p>All contacts are up to date.</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        <div class="right-column">
            <div class="calendar-box">
                <h3>Calendar</h3>
                <div id="calendar" class="calendar-container"></div>
            </div>

            <div class="card">
                <h3>Today's Events</h3>
                <div class="scrollbox tall">
                    <div id="today-events-list" class="item-list">
                        {% for event in todayEvents %}
                            <div class="list-item">
                                <strong>{{ event.title }}</strong> â€” {{ event.date }}
                                {% if event.type == 'Recurring' %}
                                    <span class="badge bg-primary">Recurring</span>
                                {% else %}
                                    <span class="badge bg-success">Meeting</span>
                                {% endif %}
                            </div>
                        {% else %}
                            <p>No events today.</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.15/index.global.min.js'></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let calendarEl = document.getElementById('calendar');
            if (!calendarEl) {
                console.error('Calendar element not found');
                return;
            }

            let calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                themeSystem: 'bootstrap5',
                height: 300, // ðŸ”½ Zmniejszenie wysokoÅ›ci kalendarza
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                dateClick: function(info) {
                    updateTodayEvents(info.dateStr);
                }
            });

            calendar.render();

            function updateTodayEvents(date) {
                fetch(`/api/today-events?date=${date}`)
                    .then(response => response.json())
                    .then(data => {
                        let eventList = document.querySelector('#today-events-list');
                        eventList.innerHTML = '';
                        if (data.length > 0) {
                            data.forEach(event => {
                                let item = document.createElement('div');
                                item.className = 'list-item';
                                item.innerHTML = `<strong>${event.title}</strong> â€” ${event.date}
                                <span class="badge ${event.type === 'Recurring' ? 'bg-primary' : 'bg-success'}">
                                    ${event.type}
                                </span>`;
                                eventList.appendChild(item);
                            });
                        } else {
                            eventList.innerHTML = '<p>No events found for this date.</p>';
                        }
                    })
                    .catch(error => console.error('Error fetching events:', error));
            }
        });
    </script>

{% endblock %}
