<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Recurring Events</title>
    <style>
        /* Styling is unchanged */
        body {
            font-family: Arial, sans-serif;
            display: flex;
            margin: 0;
            height: 100vh;
            background-color: #f9f9f9;
        }

        .sidebar {
            width: 15%;
            background-color: #1E3A5F;
            color: #fff;
            display: flex;
            flex-direction: column;
            padding: 1.5rem;
        }

        .sidebar a {
            text-decoration: none;
            color: #fff;
            padding: 0.8rem 1rem;
            border-radius: 4px;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .sidebar a:hover {
            background-color: #3b5c87;
        }

        .sidebar .logout {
            margin-top: auto;
            background-color: #FF6666;
            padding: 0.8rem 1rem;
            text-align: center;
            border-radius: 4px;
        }

        .content {
            flex: 1;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .header h1 {
            margin: 0;
        }

        .header button {
            padding: 0.6rem 1rem;
            background-color: #1E3A5F;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .header button:hover {
            background-color: #3b5c87;
        }

        .event-list {
            margin-top: 1rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            background-color: #f5f5f5;
            padding: 1rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .event-item {
            background-color: #76B6F8;
            color: white;
            padding: 1rem;
            border-radius: 4px;
            font-weight: bold;
            text-align: left;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .event-item h3 {
            margin: 0 0 0.5rem;
        }

        .event-item .buttons {
            display: flex;
            gap: 0.5rem;
        }

        .event-item button {
            padding: 0.5rem 1rem;
            background-color: white;
            color: #76B6F8;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .event-item button:hover {
            background-color: #fff;
            color: #3b5c87;
        }

        .important-btn.marked {
            background-color: #FFCC00;
            color: black;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: #fff;
            padding: 2rem;
            border-radius: 8px;
            width: 30%;
        }

        .modal-content label {
            margin-bottom: 0.5rem;
            display: block;
            font-weight: bold;
        }

        .modal-content input,
        .modal-content textarea,
        .modal-content select {
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .modal-content button {
            padding: 0.5rem 1rem;
            background-color: #1E3A5F;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .modal-content button:hover {
            background-color: #3b5c87;
        }
    </style>
</head>
<body>
<div class="sidebar">
    <a href="/dashboard" class="{{ app.request.attributes.get('_route') == 'dashboard' ? 'active' : '' }}">Dashboard</a>
    <a href="/meetings" class="{{ app.request.attributes.get('_route') == 'meetings' ? 'active' : '' }}">Meetings</a>
    <a href="/friends" class="{{ app.request.attributes.get('_route') == 'friends' ? 'active' : '' }}">Friends</a>
    <a href="/recurring-events" class="{{ app.request.attributes.get('_route') == 'recurring_events' ? 'active' : '' }}">Recurring Events</a>
    <a href="/settings" class="{{ app.request.attributes.get('_route') == 'settings' ? 'active' : '' }}">Settings</a>
    <a href="/logout" class="logout">Logout</a>
</div>

<div class="content">
    <div class="header">
        <h1>Recurring Events</h1>
        <button id="addRecurringEventBtn">Add New Event</button>
    </div>

    <div class="event-list">
        {% for event in events %}
            <div class="event-item">
                <p>Title: {{ event.title }}</p>
                <p>Description: {{ event.description }}</p>
                <p>Start Date: {{ event.startDate|date('Y-m-d') }}</p>
                <p>End Date: {{ event.endDate ? event.endDate|date('Y-m-d') : 'No end date' }}</p>
                <button class="editEventBtn" data-id="{{ event.id }}">Edit</button>
                <button class="important-btn {{ event.isImportant ? 'marked' : '' }}" data-id="{{ event.id }}">
                    {{ event.isImportant ? 'Unmark Important' : 'Mark as Important' }}
                </button>
            </div>
        {% endfor %}
    </div>
</div>

<!-- Modal -->
<div class="modal" id="recurringEventModal">
    <div class="modal-content">
        <form method="POST" action="/recurring-events">
            <input type="hidden" name="event_id" id="recurringEventId">
            <input type="text" name="title" id="recurringEventTitle" placeholder="Title" required>
            <textarea name="description" id="recurringEventDescription" placeholder="Description"></textarea>
            <label for="startDate">Start Date:</label>
            <input type="date" name="start_date" id="recurringEventStartDate" required>
            <label for="endDate">End Date:</label>
            <input type="date" name="end_date" id="recurringEventEndDate">
            <label for="recurrencePattern">Recurrence Pattern:</label>
            <select name="recurrence_pattern" id="recurringEventRecurrencePattern" required>
                <option value="daily">Daily</option>
                <option value="weekly">Weekly</option>
                <option value="monthly">Monthly</option>
                <option value="yearly">Yearly</option>
            </select>
            <button type="submit">Save</button>
        </form>
    </div>
</div>

<script>
    // JavaScript logic for modal
    const modal = document.getElementById('recurringEventModal');
    const addRecurringEventBtn = document.getElementById('addRecurringEventBtn');
    const editEventBtns = document.querySelectorAll('.editEventBtn');
    const importantBtns = document.querySelectorAll('.important-btn');

    // Add recurring event
    addRecurringEventBtn.addEventListener('click', () => {
        modal.style.display = 'flex';
        document.getElementById('recurringEventId').value = '';
        document.getElementById('recurringEventTitle').value = '';
        document.getElementById('recurringEventDescription').value = '';
        document.getElementById('recurringEventStartDate').value = '';
        document.getElementById('recurringEventEndDate').value = '';
        document.getElementById('recurringEventRecurrencePattern').value = '';
    });

    // Mark or unmark as important
    importantBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            const eventId = btn.getAttribute('data-id');
            const isImportant = btn.classList.contains('marked');

            fetch(`/recurring-events/${eventId}/important`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ important: !isImportant })
            }).then(() => {
                btn.classList.toggle('marked');
                btn.textContent = isImportant ? 'Mark as Important' : 'Unmark Important';
            });
        });
    });
</script>
</body>
