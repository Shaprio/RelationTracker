<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Recurring Events</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            margin: 0;
            height: 100vh;
            background-color: #f9f9f9;
        }

        .sidebar {
            width: 15%;
            background-color: #1E3A5F;
            color: #fff;
            display: flex;
            flex-direction: column;
            padding: 1.5rem;
        }

        .sidebar a {
            text-decoration: none;
            color: #fff;
            padding: 0.8rem 1rem;
            border-radius: 4px;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .sidebar a:hover {
            background-color: #3b5c87;
        }

        .sidebar .logout {
            margin-top: auto;
            background-color: #FF6666;
            padding: 0.8rem 1rem;
            text-align: center;
            border-radius: 4px;
        }

        .content {
            flex: 1;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .header h1 {
            margin: 0;
        }

        .header button {
            padding: 0.6rem 1rem;
            background-color: #1E3A5F;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .header button:hover {
            background-color: #3b5c87;
        }

        .event-list {
            margin-top: 1rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            background-color: #f5f5f5;
            padding: 1rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .event-item {
            background-color: #76B6F8;
            color: white;
            padding: 1rem;
            border-radius: 4px;
            font-weight: bold;
            text-align: left;
        }

        .event-item h3 {
            margin: 0 0 0.5rem;
        }

        .event-item p {
            margin: 0.5rem 0;
        }

        .event-item button {
            margin-top: 1rem;
            padding: 0.5rem 1rem;
            background-color: white;
            color: #76B6F8;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .event-item button:hover {
            background-color: #fff;
            color: #3b5c87;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background: #fff;
            padding: 2rem;
            border-radius: 8px;
            width: 30%;
        }

        .modal-content label {
            margin-bottom: 0.5rem;
            display: block;
            font-weight: bold;
        }

        .modal-content input,
        .modal-content textarea,
        .modal-content select {
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .modal-content button {
            padding: 0.5rem 1rem;
            background-color: #1E3A5F;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .modal-content button:hover {
            background-color: #3b5c87;
        }
    </style>
</head>
<body>
<div class="sidebar">
    <a href="/dashboard">Dashboard</a>
    <a href="/meetings">Meetings</a>
    <a href="/friends">Friends</a>
    <a href="/recurring-events">Recurring Events</a>
    <a href="/settings">Settings</a>
    <a href="/logout" class="logout">Logout</a>
</div>

<div class="content">
    <div class="header">
        <h1>Recurring Events</h1>
        <button id="addEventBtn">Add Event</button>
    </div>

    <div class="event-list">
        {% for event in events %}
            <div class="event-item">
                <h3>{{ event.title }}</h3>
                <p>Description: {{ event.description }}</p>
                <p>Start Date: {{ event.startDate|date('Y-m-d') }}</p>
                <p>End Date: {{ event.endDate ? event.endDate|date('Y-m-d') : 'No end date' }}</p>
                <p>Recurrence: {{ event.recurrencePattern|capitalize }}</p>
                <p class="contacts">Contacts:
                    {% for contact in event.contacts %}
                        {{ contact.contact.name }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </p>
                <button class="editEventBtn" data-id="{{ event.id }}">Edit</button>
            </div>
        {% endfor %}
    </div>
</div>

<!-- Modal -->
<div class="modal" id="eventModal">
    <div class="modal-content">
        <h2 id="modalTitle">Add Event</h2>
        <form method="POST">
            <input type="hidden" name="event_id" id="eventId">
            <label for="title">Title:</label>
            <input type="text" name="title" id="eventTitle" required>
            <label for="description">Description:</label>
            <textarea name="description" id="eventDescription"></textarea>
            <label for="recurrence_pattern">Recurrence Pattern:</label>
            <select name="recurrence_pattern" id="eventRecurrencePattern" required>
                <option value="daily">Daily</option>
                <option value="weekly">Weekly</option>
                <option value="monthly">Monthly</option>
                <option value="yearly">Yearly</option>
            </select>
            <label for="start_date">Start Date:</label>
            <input type="date" name="start_date" id="eventStartDate" required>
            <label for="end_date">End Date:</label>
            <input type="date" name="end_date" id="eventEndDate">
            <label for="contacts">Contacts:</label>
            <select name="contacts[]" id="eventContacts" multiple>
                {% for contact in contacts %}
                    <option value="{{ contact.id }}">{{ contact.name }}</option>
                {% endfor %}
            </select>
            <button type="submit">Save</button>
        </form>
    </div>
</div>

<script>
    const modal = document.getElementById('eventModal');
    const addEventBtn = document.getElementById('addEventBtn');
    const editEventBtns = document.querySelectorAll('.editEventBtn');
    const modalTitle = document.getElementById('modalTitle');
    const eventId = document.getElementById('eventId');
    const eventTitle = document.getElementById('eventTitle');
    const eventDescription = document.getElementById('eventDescription');
    const eventRecurrencePattern = document.getElementById('eventRecurrencePattern');
    const eventStartDate = document.getElementById('eventStartDate');
    const eventEndDate = document.getElementById('eventEndDate');
    const eventContacts = document.getElementById('eventContacts');

    addEventBtn.addEventListener('click', () => {
        modalTitle.textContent = 'Add Event';
        eventId.value = '';
        eventTitle.value = '';
        eventDescription.value = '';
        eventRecurrencePattern.value = '';
        eventStartDate.value = '';
        eventEndDate.value = '';
        eventContacts.value = '';
        modal.style.display = 'flex';
    });

    editEventBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            modalTitle.textContent = 'Edit Event';
            const id = btn.dataset.id;
            const parent = btn.parentElement;

            eventId.value = id;
            eventTitle.value = parent.querySelector('h3').textContent;
            eventDescription.value = parent.querySelector('p:nth-of-type(1)').textContent.split(': ')[1];
            eventRecurrencePattern.value = parent.querySelector('p:nth-of-type(3)').textContent.toLowerCase();
            eventStartDate.value = parent.querySelector('p:nth-of-type(2)').textContent.split(': ')[1];
            const endDate = parent.querySelector('p:nth-of-type(3)').textContent.split(': ')[1];
            eventEndDate.value = endDate !== 'No end date' ? endDate : '';
            modal.style.display = 'flex';
        });
    });

    window.addEventListener('click', (e) => {
        if (e.target === modal) {
            modal.style.display = 'none';
        }
    });
</script>
</body>
</html>
